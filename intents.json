{
  "intents": [
    {
      "tag": "find_restaurant",
      "patterns": [
        "Can you recommend a restaurant?",
        "Where can I eat?",
        "Suggest me a restaurant",
        "What are some good restaurants?"
      ],
      "responses": [
        "Sure! Where would you like to eat? Any preferences for location or category?"
      ]
    },
    {
      "tag": "find_by_category",
      "patterns": [
        "Find a local restaurant",
        "I want a mid-range restaurant",
        "Show me high-end restaurants"
      ],
      "responses": [
        "I found some restaurants in this category. Let me show you!"
      ]
    },
    {
      "tag": "find_by_location",
      "patterns": [
        "Find restaurants in {location}",
        "Where can I eat in {location}?",
        "Restaurants near me",
        "Suggest me places in {location}"
      ],
      "responses": [
        "Here are some great restaurants in {location}. Let me show you!"
      ]
    },
    {
      "tag": "find_by_special_item",
      "patterns": [
        "I want a restaurant with {special_item}",
        "Find a restaurant with {special_item}",
        "Where can I find {special_item}?"
      ],
      "responses": [
        "Here are some restaurants serving {special_item}. Enjoy!"
      ]
    },
    {
      "tag": "find_by_rating",
      "patterns": [
        "I want a highly rated restaurant",
        "Show me top-rated restaurants",
        "Find restaurants with rating above {rating}"
      ],
      "responses": [
        "Here are some highly-rated restaurants. You may like them!"
      ]
    },
    {
      "tag": "find_by_sub_location",
      "patterns": [
        "Find restaurants in {sub_location}",
        "Show me restaurants in {sub_location}",
        "Any restaurants in {sub_location}?"
      ],
      "responses": [
        "Here are some great places in {sub_location}. Check them out!"
      ]
    }
  ]
}
